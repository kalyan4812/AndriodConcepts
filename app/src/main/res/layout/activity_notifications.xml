<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services.Notifications"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/simple_notification"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Simple Notification"
            />
        <Button
            android:id="@+id/bigtext_notification"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Bigtext Notification"
            />
        <Button
            android:id="@+id/message_notification"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Message Notification"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/picture_notification"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Picture Notification"
            />
        <Button
            android:id="@+id/action_notification"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Action Notification"
            />

    </LinearLayout>

</LinearLayout>