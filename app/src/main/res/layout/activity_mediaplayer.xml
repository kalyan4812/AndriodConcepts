<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Multimedia.Mediaplayer">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:id="@+id/medialogo"
        android:src="@drawable/google_icon"
        ></ImageView>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/seek"
        ></SeekBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:0"
            android:layout_marginLeft="10sp"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:id="@+id/tv1"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180sp"
            android:text="0:0"
            android:textSize="40sp"

            android:id="@+id/tv2"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:padding="10dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:id="@+id/backward"
            android:background="@drawable/ic_fast_rewind_black_24dp"
            android:onClick="backward"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.2"
            android:id="@+id/play"
            android:onClick="play"
            android:background="@drawable/ic_play_arrow_black_24dp"
            android:layout_marginLeft="15dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.2"
            android:id="@+id/pause"
            android:onClick="pause"
            android:background="@drawable/ic_pause_black_24dp"
            android:layout_marginLeft="15dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/stop"
            android:onClick="stop"
            android:background="@drawable/ic_stop_black_24dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:onClick="forward"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/forward"
            android:background="@drawable/ic_fast_forward_black_24dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>


</LinearLayout>